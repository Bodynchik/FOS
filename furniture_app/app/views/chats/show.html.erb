<div class="chat_wrapper">
  <div class="chat-container">
    <h1 class="chat-header"><%= t('.title') %></h1>

    <form id="message-form" class="chat-form" action="<%= chat_messages_path(@chat) %>" method="post" >
      <input type="text" id="message-input" class="message-input">
      <button type="submit" class="chat-submit" onclick = "reloadPage()" ><%= t('.send') %></button>
      <%= link_to t('.my_chats'), chats_path, class: "chat-submit" %>
    </form>

    <div id="chat-messages" class="chat-messages" data-manufacturer-id="<%= @manufacturer.id %>" data-user-id="<%= @user.id %>" data-user-type="<%= @user_type %>" data-chat-id="<%= @chat.id %>">
      <% @messages.each do |message| %>
          <div class="message">
          <% if message.user_id.present? %>
            <strong><%= "#{message.user.username} (#{message.created_at.strftime("%H:%M")})" %></strong>
          <% elsif message.manufacturer_id.present? %>
            <strong><%= "#{message.manufacturer.username}" %></strong>
          <% end %>
          <%= message.content %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    function reloadPage() {
        setTimeout(function() {
            window.location.reload();
        }, 1000);
    }
</script>


