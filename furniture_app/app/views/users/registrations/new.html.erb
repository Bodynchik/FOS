<div class="background-image">
  <div class="container-sign">
    <h2>Реєстрація</h2>

    <div class="form-container">
      <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div><%= f.text_field :first_name, placeholder: "Ім'я", class: "input-field", required: true %></div>
        <div><%= f.text_field :last_name, placeholder: "Прізвище", class: "input-field", required: true %></div>
        <div><%= f.text_field :middle_name, placeholder: "По батькові", class: "input-field" %></div>
        <div><%= f.email_field :email, placeholder: "Пошта", class: "input-field", required: true %></div>
        <div><%= f.text_field :phone_number, placeholder: "Номер телефону", class: "input-field", required: true %></div>
        <div><%= f.password_field :password, placeholder: "Пароль", class: "input-field", required: true %></div>
<!--        <div><%#= f.password_field :password_confirmation, placeholder: "Підтвердження паролю", class: "input-field" %></div>-->
        <div><%= f.submit "Зареєструватися", class: "btn" %></div>
      <% end %>
    </div>

    <p><%= link_to "Я вже зареєстрований", new_user_session_path, class: "link-registration" %></p>
  </div>
</div>