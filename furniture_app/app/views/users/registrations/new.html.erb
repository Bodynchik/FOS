<div class="background-image">
  <div class="container-sign">
    <h2><%= t('.reg') %></h2>

    <div class="form-container">
      <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div><%= f.text_field :first_name, placeholder: t('.name'), class: "input-field", required: true %></div>
        <div><%= f.text_field :last_name, placeholder: t('.sur_name'), class: "input-field", required: true %></div>
        <div><%= f.text_field :middle_name, placeholder: t('.mid_name'), class: "input-field" %></div>
        <div><%= f.email_field :email, placeholder: t('users.sessions.new.email_f'), class: "input-field", required: true %></div>
        <div><%= f.text_field :phone_number, placeholder: t('.phone'), class: "input-field", required: true %></div>
        <div><%= f.password_field :password, placeholder: t('users.sessions.new.pass_f'), class: "input-field", required: true %></div>
        <!--        <div><%#= f.password_field :password_confirmation, placeholder: "Підтвердження паролю", class: "input-field" %></div>-->
        <div>
          <%= f.select :currency, %w[UAH USD EUR], { selected: 'UAH' }, class: "input-field", required: true %>
        </div>
        <div><%= f.submit t('.sign_up'), class: "btn" %></div>
      <% end %>
    </div>

    <p><%= link_to t('.registered'), new_user_session_path, class: "link-registration" %></p>

    <% if flash[:alert].present? %>
      <div class="flash alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

  </div>
</div>